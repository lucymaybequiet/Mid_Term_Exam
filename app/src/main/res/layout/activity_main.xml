<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:src="@mipmap/wangyiyun"/>
    <EditText
        android:id="@+id/ed_account"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:hint=" account"
        android:background="@mipmap/rectangle2"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/ed_password"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:hint=" password"
        android:background="@mipmap/rectangle3"/>
    <Button
        android:id="@+id/btn_forget"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Forgot your password?"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:layout_gravity="center"
        android:background="@mipmap/buttons"
        android:layout_marginBottom="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="#ccc"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign with a social account"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/btn_login_facebook"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/rectangle1"
            android:layout_marginBottom="20dp"
            android:text="Login with Facebook"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp"
            android:drawableLeft="@drawable/pic_f"
            android:drawablePadding="-40dp"
            android:paddingLeft="20dp"/>
        <Button
            android:id="@+id/btn_login_twitter"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/rectangle"
            android:layout_marginBottom="50dp"
            android:text="Login with Twitter"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp"
            android:drawableLeft="@drawable/pic_bird"
            android:drawablePadding="-40dp"
            android:paddingLeft="20dp"/>
    </LinearLayout>

</LinearLayout>