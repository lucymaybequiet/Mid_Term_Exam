<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:id="@+id/ll_rv_album"
    android:padding="10dp"
    android:background="@color/black"
    android:layout_marginLeft="10dp">

    <TextView
        android:id="@+id/tv_rv_album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:textColor="#fff"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn_rv_ablum_detail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_rv_album_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:background="@mipmap/playlist"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_rv_album_songcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_toRightOf="@+id/btn_rv_ablum_detail"
        android:layout_below="@+id/tv_rv_album_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="40dp"
        android:background="@mipmap/play" />

</RelativeLayout>